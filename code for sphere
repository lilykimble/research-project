 points=[[-37.5,75,-100], [0,150,-100], [37.5,75,-100],[0,0,100]],
  faces=[[1,0,3],[1,3,2],[2,3,0],[2,0,1]]);
rotate(60*i) polyhedron(
 points=[[-112.5,225,-100], [-75,300,-100], [-37.5,225,-100],[0,0,100]],
  faces=[[1,0,3],[1,3,2],[2,3,0],[2,0,1]]);
