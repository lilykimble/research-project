 points=[[37.5,225,-100], [75,300,-100], [112.5,225,-100],[0,0,100]],
  faces=[[1,0,3],[1,3,2],[2,3,0],[2,0,1]]);
  rotate(60*i)  polyhedron(
 points=[[-262.5,525,-100], [-225,600,-100], [-187.5,525,-100],[0,0,100]],
  faces=[[1,0,3],[1,3,2],[2,3,0],[2,0,1]]);
  rotate(60*i)  polyhedron(
 points=[[-187.5,375,-100], [-150,450,-100], [-112.5,375,-100],[0,0,100]],
  faces=[[1,0,3],[1,3,2],[2,3,0],[2,0,1]]);
  rotate(60*i)  polyhedron(
