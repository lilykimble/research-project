  faces=[[1,0,3],[1,3,2],[2,3,0],[2,0,1]]);}}
  
  
rotation();
  
  
module final() {
    difference(){sphere(r=100); sphere(r=90); rotation(); translate([0,0,100]) sphere(r=50); }
    translate([0,0,-97]) cube([100,10,7], center=true);
    rotate(90) translate([0,0,-97]) cube([100,10,7], center=true);}
    
