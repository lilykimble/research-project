module create_pumpkin()
{
    difference(){sphere(r=100); translate([0, 0, 250])  #cube([400, 400, 400], center=true); sphere(r=90); polyhedron(
  points=[[100,100,-100], [150,100,-100], [100,150,-100],[0,0,100]],
  faces=[[1,0,3],[1,3,2],[2,3,0],[2,0,1]]);}
}


//create_pumpkin();


module rotation()
 {
for ( i = [0 : 5] ){
